<ScrollPane fitToWidth="true" fx:controller="controllers.AddContact" xmlns:fx="http://javafx.com/fxml"	xmlns="http://javafx.com/javafx/2.2">
<VBox id="mainPanel" nodeOrientation="RIGHT_TO_LEFT" alignment="CENTER" spacing="20" >	
	<GridPane hgap="5" vgap="15" alignment="CENTER">
		<columnConstraints>
			<ColumnConstraints  percentWidth="20" />
			<ColumnConstraints  percentWidth="10" />
			<ColumnConstraints  percentWidth="70" />
		</columnConstraints>
		<Label text="שם"  fx:id="lfullName"	GridPane.columnIndex="1"	GridPane.rowIndex="0" />
		<TextField  fx:id="fullName"  		GridPane.columnIndex="2" 	GridPane.rowIndex="0" onKeyReleased="#statusChange"/>
		<Label text="טלפון" 		fx:id="lphoneNumber"		GridPane.columnIndex="1"	GridPane.rowIndex="1" />
		<TextField fx:id="phoneNumber" 		GridPane.columnIndex="2" 	GridPane.rowIndex="1" onKeyReleased="#statusChange"/>
		<Label text="אימייל"  	fx:id="lemail"		GridPane.columnIndex="1"	GridPane.rowIndex="2" />
		<TextField fx:id="email"  			GridPane.columnIndex="2"	GridPane.rowIndex="2" onKeyReleased="#statusChange"/>
		<Label text="כתובת"  	fx:id="lfullAddress"		GridPane.columnIndex="1"	GridPane.rowIndex="3" />
		<TextField fx:id="fullAddress" 		GridPane.columnIndex="2" 	GridPane.rowIndex="3" onKeyReleased="#statusChange"/>
		<Label text="עיר"  	fx:id="lcountry"		GridPane.columnIndex="1"	GridPane.rowIndex="4" />
		<TextField fx:id="country" 		GridPane.columnIndex="2" 	GridPane.rowIndex="4" onKeyReleased="#statusChange"/>
	</GridPane>
	<HBox alignment="CENTER" spacing="20">
		<Button text="ביטול" minWidth="100" onAction="#cancel"/>
		<Button text="שמור" minWidth="100" onAction="#save"/>
	</HBox>
	<HBox  alignment="CENTER" spacing="20">
		<Label fx:id="validInput" text=""/> 
	</HBox>
</VBox>
</ScrollPane>

